@model List<wqwz.Models.FormData>





<table class= "table table-bordered">
    <thead>
        <tr>
            @foreach (var th in Model.Take(Model.GroupBy(data => data.Guid).First().Count()))
            {
                <th>
                    @th.FormField.Name
                </th>
            }
            <th>操作</th>
        </tr>
    </thead>
    <tbody>

        @foreach (var group in Model.GroupBy(data => data.Guid))
        {
            <tr>
                @foreach (var item in group)
                {
                    <td>
                        @Translate.tran(item)
                    </td>
                }
                <td>
                    @Html.ActionLink("查看", "OperateIndex", "Home", new { guid = group.First().Guid },new{ })
                    @Html.ActionLink("修改", "Find", "Form", new { id=1,guid = group.First().Guid }, new { })
                    @Html.ActionLink("删除", "DelEdu", "FormData", new { guid = group.First().Guid }, new { })
                </td>
            </tr>
            
        }

    </tbody>
</table>
